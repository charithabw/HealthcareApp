<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorLoginMain"/>
    <ImageView
        android:id="@+id/loginProfilepicIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Forgot Password"
        android:textColor="@color/pureWhite"
        android:textSize="28dp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/view1"
        android:background="@drawable/ic_wave"/>

    <LinearLayout
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
        android:id="@+id/txtFgtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/edtFgtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Password"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorLoginMain"
        android:background="@drawable/logintextround"
        android:layout_below="@+id/txtFgtUsername"/>
    <EditText
        android:id="@+id/edtFgtRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Re-Password"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorLoginMain"
        android:background="@drawable/logintextround"
        android:layout_below="@+id/edtFgtPassword"/>
    <Button
        android:id="@+id/btnFgtConform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Conform"
        android:textStyle="bold"
        android:background="@drawable/loginroundbutton"
        android:layout_below="@+id/edtFgtRePassword"/>
    </LinearLayout>
</RelativeLayout>
</ScrollView>