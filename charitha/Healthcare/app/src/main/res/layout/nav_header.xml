<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#0E66B9"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:layout_marginBottom="-70dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/pro_pic"
        android:layout_centerVertical="true"
        android:id="@+id/profileImageSideBar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profileImageSideBar"
        android:id="@+id/nameSideBar"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="Chike Mgbemena"
        android:textColor="#fff"
        android:textSize="14sp"

        />
    <View
        android:layout_alignParentTop="@+id/profileImageSideBar"
        android:layout_marginTop="155dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>